<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/busId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ListBus">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Date, heure, direction"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btndate"
                android:text="Choisir la date"/>
            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_weight="1"
                android:inputType="date"
                android:hint="01/01/2021"/>
            <requestFocus/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btntime"
                android:text="Choisir l'heure" />
            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_weight="1"
                android:inputType="time"
                android:hint="12:00"/>
            <requestFocus/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtViewBus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bus:"
                android:textSize = "20dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="0.5"/>
            <Spinner
                android:id="@+id/spinnerBus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_weight="0.5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtViewDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direction :"
                android:textSize = "20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:visibility="gone"/>
            <Spinner
                android:id="@+id/spinnerDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/spinnerBus"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>